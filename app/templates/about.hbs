<div class="container">
	<div class="row">
	  {{#each model.questions as |question|}}
	    <div class="col-md-4">
	      <div class="panel panel-default">
	        <div class="panel-heading">
	          <h3 class="panel-title">Got Question?</h3>
	        </div>
	        <div class="panel-body">
	          <p>Question: 
	          {{#link-to 'question' question.id}}{{question.content}}{{/link-to}}
	          </p>
	          <p><strong>Asked by:</strong> {{question.author}}</p>
	        </div>
	        <div class="panel-footer text-right">
	        	
	        </div>
	      </div>
	    </div>
	  {{/each}}
	</div>
</div>
<ul>
  {{#each model.answers as |answer|}}
    <li>{{answer.content}} - {{answer.author}} </li>
  {{/each}}
</ul>
