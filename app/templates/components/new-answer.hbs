{{#if addNewAnswer}}
<form class="form-horizontal">
  <div class="form-group">
  	{{textarea class="form-control" value=content  placeholder="Answer"}}
  </div>
  <div class="form-group">
  	{{input class="form-control" value=author placeholder="Author"}}
  </div>
  <div class="form-group">
  	<button class="btn btn-primary" {{action 'saveAnswer'}}>
  	<i class="fa fa-pencil-square-o" aria-hidden="true"></i> Save</button>
  </div>
</form>
{{else}}
<form class="form-horizontal">
   <div class="form-group">
  		<button class="btn btn-primary" {{action 'AnswerFormShow'}}><i class="fa fa-pencil-square-o" aria-hidden="true"></i>  Answer</button>
	</div>
</form>
{{/if}}