<div class="container question-detail">
	<div class="row">
		<div class="col-md-8 blog-main">
			<div class="blog-post">
	            <h2 class="blog-post-title">{{model.content}}</h2>
	            <p class="blog-post-meta"><h4>Asked by: {{model.author}}</h4></p>
	            <div class="help-content">
		            (Can you help {{model.author}} to answer a question?)<br>
	            </div>
	            <span class="return-content">
	            	{{#link-to 'about'}}Return to Question Page{{/link-to}}
	            </span>
	            <br><br>
	            
              
              <ul>
                {{#each model.answers as |answer|}}
                  <li>{{answer.content}} - {{answer.author}} </li>
                {{/each}}
            </ul>
              {{new-answer saveAnswer="saveAnswer" question=model}}
              
